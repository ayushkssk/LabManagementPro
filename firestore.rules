rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tests collection:
    // - allow public read (useful for catalog viewing / demo)
    // - allow write only for authenticated users
    match /tests/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Patients collection: allow authenticated users to read/write
    match /patients/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
