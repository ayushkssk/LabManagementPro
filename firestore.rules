rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to reports collection for valid tokens
    match /reports/{reportId} {
      allow read: if true; // Allow public read access for reports
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // General rules for other collections (authenticated users only)
    match /{document=**} {
      allow read, write: if request.auth != null && request.time < timestamp.date(2025, 10, 4);
    }
  }
}