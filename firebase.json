{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/report/**",
        "function": "report"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
